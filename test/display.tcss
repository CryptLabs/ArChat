Screen {
    background: rgb(0, 0, 0);
}

Static {
    height: 5;
    background: white;
    color: blue;
    border: heavy blue;
}

Static.remove {
    display: none;
}

ABOUT {
    align: center middle;
    background: blue;
    color: white;
}

ABOUT>Static {
    width: 100;
    height: auto;
}

#title {
    content-align-horizontal: center;
    text-style: reverse;
}

#any-key {
    content-align-horizontal: center;
}


Input {
    height: 4;
}

Label {
    color: rgb(197, 24, 24);
    height: auto;
    width: auto;
    border: blank;
}

#ask {
    dock: top;
    width: auto;
    height: auto;
    color: #0f2b41;
    background: dodgerblue;
}

